<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:my="urn:import:com.webhiob.GWT.client">

    <g:SplitLayoutPanel>
        <g:north size="90">
            <g:HTMLPanel>
                <div>
                    <h1 class="centreH1">WebHiob</h1>
                    <h2 class="centreH2">GWT</h2>
                </div>
            </g:HTMLPanel>
        </g:north>
        <g:west size="500">
            <g:VerticalPanel>
                <g:Label ui:field="errorMsgLabel"/>
                <g:Label ui:field="lessonTreeTitle"> Lessons </g:Label>
                <g:Tree ui:field="lessonTree"/>
            </g:VerticalPanel>
        </g:west>
        <g:center>
            <my:LessonTabPanel ui:field="lessonPanel"/>
        </g:center>
    </g:SplitLayoutPanel>

</ui:UiBinder>