<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>


    <g:DockLayoutPanel>
        <g:north size="35">
          <g:Label ui:field="lessonTitle" addStyleNames="label"/>
        </g:north>
        <g:center>
            <g:TabPanel width="100%" height="100%" ui:field="tabPanel" styleName="gwt-TabPanel">
                <g:Tab text="Lesson">
                    <g:SimplePanel ui:field="lessonPanel"/>
                </g:Tab>
                <g:Tab text="Security problem">
                    <g:SimplePanel ui:field="problemPanel"/>
                </g:Tab>
                <g:Tab text="Solution">
                    <g:SimplePanel ui:field="solutionPanel"/>
                </g:Tab>
            </g:TabPanel>
        </g:center>
    </g:DockLayoutPanel>

</ui:UiBinder>